import java.net.*;
import java.io.*;

public class TCPWorker implements Runnable
{
    
    ServerSocket serviceSocket;

    public TCPWorker()
    {
        
    }

    public void run()
    {
        try
        {
            serviceSocket = new ServerSocket(Server.DEFAULT_PORT_TCP);
        }
        catch( Exception ex )
        {
            System.out.println("Problem creating socket on port: " + Server.DEFAULT_PORT_TCP);
            ex.printStackTrace();
            Server.isRunning = false;
        }


        while(Server.isRunning)
        {
            try
            {
                new Thread( new ChatWorker(serviceSocket.accept())).start();
            }
            catch (IOException ie)
            {
                ie.printStackTrace();
                Server.isRunning = false;
            }
        }

        //close socket here
        if(!(serviceSocket.isClosed()))
        {
            try
            {
                serviceSocket.close();
            }
            catch(Exception ex)
            {
                ex.printStackTrace();
            }
        }
    }
}