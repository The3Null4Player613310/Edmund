<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
        android:id="@+id/quest_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="4dp"
        android:layout_toStartOf="@+id/join_button"
        android:text="Title"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"/>

    <TextView
        android:id="@+id/quest_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SubTitle"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:layout_marginBottom="9dp"
        android:layout_marginEnd="4dp"
        android:layout_toStartOf="@+id/join_button"
        android:layout_alignStart="@+id/quest_title"
        android:layout_below="@+id/quest_title"/>

    <ToggleButton
        android:id="@+id/join_button"
        android:layout_width="104dp"
        android:layout_height="wrap_content"
        android:text="ToggleButton"
        android:textOff="Join"
        android:textOn="Leave"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="9dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="9dp"/>

</RelativeLayout>