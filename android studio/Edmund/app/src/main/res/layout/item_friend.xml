<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
        android:id="@+id/friend_first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="9dp"
        android:text="First"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"/>

    <TextView
        android:id="@+id/friend_last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:layout_alignBaseline="@+id/friend_first_name"
        android:layout_alignBottom="@+id/friend_first_name"
        android:layout_toEndOf="@+id/friend_first_name"/>

    <TextView
        android:id="@+id/friend_rep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/friend_first_name"
        android:layout_below="@+id/friend_first_name"
        android:layout_marginBottom="9dp"
        android:text="Rep: 0"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>

</RelativeLayout>